{
   "compileOnSave": false,
   "compilerOptions": {
       "alwaysStrict": true,
       "allowSyntheticDefaultImports": false,
       "lib": [
           "dom",
           "es2016" // important for ie11 support
       ],
       "target": "es5",
       "module": "commonjs",
       "noImplicitAny": false,
       "noUnusedLocals": true,
       "noUnusedParameters": true,
       "removeComments": true,
       "preserveConstEnums": true,
       "skipLibCheck": true,
       "sourceMap": false,
       "downlevelIteration": true   // Important for iterator implementations
   },
   "exclude": [
       "node_modules",
       "source/tests"
   ]
}
