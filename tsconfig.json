{
   "compileOnSave": false,
   "compilerOptions": {
       "alwaysStrict": true,
       "allowSyntheticDefaultImports": false,
       "lib": [
           "dom",
           "es2016" // important for ie11 support
       ],
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "noImplicitAny": false,
       "noUnusedLocals": true,
       "noUnusedParameters": true,
       "removeComments": true,
       "preserveConstEnums": true,
       "skipLibCheck": true,
       "sourceMap": true,
       "downlevelIteration": true,   // Important for iterator implementations
       "outDir": "dist",
       "baseUrl": ".",
       "paths": {
           "*": [
               "node_modules/*"
           ]
       }
   },
   "include": [
       "source/**/*"
   ],
   "exclude": [
       "node_modules",
       "source/tests"
   ]
}
